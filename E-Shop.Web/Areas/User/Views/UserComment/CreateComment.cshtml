@model CreateCommentVM




<div class="col-xl-9 col-lg-8 col-md-7">
    <div class="ui-box bg-white mb-5">
        <div class="ui-box-title">افزودن دیدگاه</div>
        <form asp-action="CreateComment" method="post">
            <!-- Author Name (Half Width) -->
            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="AuthorName"></label>
                    <input asp-for="AuthorName" class="form-control" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>
            </div>

            <!-- Comment Textarea (Bigger) -->
            <div class="form-group">
                <label asp-for="Text"></label>
                <textarea asp-for="Text" class="form-control comment-textarea"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <!-- Positive Evaluations -->
            <div class="form-group evaluations-section">
                <label>نقاط قوت</label>
                <div id="positive-evaluations" class="evaluations-container">
                    @for (int i = 0; i < Model.PositiveEvaluations.Count; i++)
                    {
                        <input type="text" asp-for="PositiveEvaluations[i].Text" class="form-control evaluation-input mb-2" placeholder="نقطه قوت @(i + 1)" />
                    }
                </div>
                <button type="button" class="btn btn-sm btn-outline-secondary add-evaluation-btn" onclick="addPositiveEvaluation()">افزودن نقطه قوت</button>
            </div>

            <!-- Negative Evaluations -->
            <div class="form-group evaluations-section">
                <label>نقاط ضعف</label>
                <div id="negative-evaluations" class="evaluations-container">
                    @for (int i = 0; i < Model.NegativeEvaluations.Count; i++)
                    {
                        <input type="text" asp-for="NegativeEvaluations[i].Text" class="form-control evaluation-input mb-2" placeholder="نقطه ضعف @(i + 1)" />
                    }
                </div>
                <button type="button" class="btn btn-sm btn-outline-secondary add-evaluation-btn" onclick="addNegativeEvaluation()">افزودن نقطه ضعف</button>
            </div>

            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="btn btn-primary submit-btn">ثبت دیدگاه</button>
        </form>
    </div>
</div>
