@model CreateCommentVM




<div class="col-xl-9 col-lg-8 col-md-7">
    <div class="ui-box bg-white mb-5">
        <div class="ui-box-title">افزودن دیدگاه</div>
        <form asp-action="CreateComment" method="post">
            <div class="form-group">
                <label asp-for="AuthorName"></label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>نقاط قوت</label>
                <div id="positive-evaluations">
                    @for (int i = 0; i < Model.PositiveEvaluations.Count; i++)
                    {
                        <input type="text" asp-for="PositiveEvaluations[i].Text" class="form-control mb-2" placeholder="نقطه قوت @(i + 1)" />
                    }
                    @if (Model.PositiveEvaluations.Count == 0)
                    {
                        <p>هیچ نقطه قوتی وارد نشده است</p>
                    }
                </div>
                <button type="button" class="btn btn-secondary" onclick="addPositiveEvaluation()">افزودن نقطه قوت</button>
            </div>
            <div class="form-group">
                <label>نقاط ضعف</label>
                <div id="negative-evaluations">
                    @for (int i = 0; i < Model.NegativeEvaluations.Count; i++)
                    {
                        <input type="text" asp-for="NegativeEvaluations[i].Text" class="form-control mb-2" placeholder="نقطه ضعف @(i + 1)" />
                    }
                    @if (Model.NegativeEvaluations.Count == 0)
                    {
                        <p>هیچ نقطه ضعفی وارد نشده است</p>
                    }
                </div>
                <button type="button" class="btn btn-secondary" onclick="addNegativeEvaluation()">افزودن نقطه ضعف</button>
            </div>
            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="btn btn-primary">ثبت دیدگاه</button>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        function addPositiveEvaluation() {
            var index = $('#positive-evaluations input').length;
            $('#positive-evaluations').append('<input type="text" name="PositiveEvaluations[' + index + '].Text" class="form-control mb-2" placeholder="نقطه قوت ' + (index + 1) + '" />');
        }

        function addNegativeEvaluation() {
            var index = $('#negative-evaluations input').length;
            $('#negative-evaluations').append('<input type="text" name="NegativeEvaluations[' + index + '].Text" class="form-control mb-2" placeholder="نقطه ضعف ' + (index + 1) + '" />');
        }
    </script>
}
