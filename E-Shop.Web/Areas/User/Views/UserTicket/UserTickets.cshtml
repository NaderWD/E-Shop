@model IEnumerable<TicketVM>



<main class="page-content">
    <div class="container">
        <div class="row mb-5">
            <div class="col-xl-3 col-lg-4 col-md-5 mb-md-0 mb-4">
                <div class="ui-sticky ui-sticky-top">
                    <partial name="_UserSideProfile" />
                </div>
            </div>
            <div class="col-xl-9 col-lg-8 col-md-7">
                <div class="ui-box bg-white mb-5">
                    <div class="ui-box-title align-items-center justify-content-between">
                        تیکتهای شما
                        <a href="CreateTicket" class="btn btn-outline-light">تیکت جدید <i class="ri-add-line ms-2"></i></a>
                    </div>
                    @if (Model == null || !Model.Any())
                    {
                        <div class="ui-box-empty-content">
                            <div class="ui-box-empty-content-icon">
                                <img src="./theme-assets/images/theme/orders.svg" alt="">
                            </div>
                            <div class="ui-box-empty-content-message">
                                تیکتی تا به الان ایجاد نکرده اید.
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="ui-box-content">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>زمان ایجاد</th>
                                            <th>بخش</th>
                                            <th>موضوع</th>
                                            <th>وضعیت</th>
                                            <th>آخرین بروزرسانی</th>
                                            <th>تعداد پیام ها</th>
                                            <th>عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var ticket in Model)
                                        {
                                            <tr>
                                                <td class="fa-num">@ticket.Id</td>
                                                <td class="fa-num">@ticket.CreateDate?.ToString("yyyy/MM/dd HH:mm:ss")</td>
                                                <td class="fa-num">@ticket.Section</td>
                                                <td class="fa-num">@ticket.Title</td>
                                                <td class="fa-num">
                                                    <span class="badge bg-warning rounded-pill">
                                                        @ticket.Status
                                                    </span>
                                                </td>
                                                <td class="fa-num">@ticket.LastModifiedDate?.ToString("yyyy/MM/dd")</td>
                                                <td class="fa-num">@ticket.Message?.Count() ?? 0</td>
                                                <td>
                                                    <a href="@Url.Action("TicketMessages", new { id = ticket.Id })" class="btn btn-circle btn-info my-1">
                                                        <i class="ri-eye-line"></i>
                                                    </a>
                                                    <a href="@Url.Action("DeleteTicket", new { id = ticket.Id })" class="btn btn-circle btn-danger my-1">
                                                        <i class="ri-close-line"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</main>