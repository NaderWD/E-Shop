@model ProSpecEditVM

<div class="card">
    <h2 class="card-header">ویرایش مشخصه محصول</h2>
    <div class="card-body">
        <form asp-action="EditSpecification" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ProSpecId" />
            <input type="hidden" asp-for="ProductId" />

            <div class="mb-3">
                <label asp-for="SelectedSpecIds" class="form-label">نام مشخصه</label>
                <select asp-for="SelectedSpecIds" class="form-select" asp-items="Model.AvailableSpecifications">
                    <option value="">-- انتخاب کنید --</option>
                </select>
                <span asp-validation-for="SelectedSpecIds" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Value" class="form-label">مقدار</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">ذخیره</button>
                <a asp-action="ProductDetails" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-secondary">لغو</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}