@model AddSpecToProductVM




<form asp-action="EditForProduct" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="container mt-3">
        <div class="row">
            @foreach (var specification in Model.AvailabeSpecifications)
            {
                <div class="col-6 col-md-3 mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="selectedSpecsIds" value="@specification.SpecId" @(Model.SelectedSpecificationIds.Contains(specification.SpecId) ? "checked" : "")>
                        <label class="form-check-label">@specification.Name</label>
                    </div>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary mt-3">ویرایش</button>
    </div>
</form>
