@model ProductSpecAddVM

<h2>Edit Product Specification</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="SelectedSpecificationId" />

    <div class="form-group">
        <label>Specification</label>
        <input class="form-control"
               value="@Model.AvailabeSpecifications.First(s => s.Id == Model.SelectedSpecificationId).Name"
               disabled />
    </div>

    <div class="form-group">
        <label asp-for="Value"></label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>