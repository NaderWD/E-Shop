@model ProductSpecAddVM

<h2>Add Specification to Product</h2>

<form asp-action="Add">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label asp-for="SelectedSpecificationId"></label>
        <select asp-for="SelectedSpecificationId"
                asp-items="@(new SelectList(Model.AvailabeSpecifications, "Id", "Name"))"
                class="form-control">
            <option value="">-- Select Specification --</option>
        </select>
        <span asp-validation-for="SelectedSpecificationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Value"></label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Specification</button>
</form>