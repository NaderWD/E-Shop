@model List<CommentVM>

<h2>All Comments</h2>
<table class="table">
    <thead>
        <tr>
            <th>Text</th>
            <th>Author</th>
            <th>Approved</th>
            <th>Likes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.Text</td>
                <td>@comment.AuthorName</td>
                <td>@comment.IsApproved</td>
                <td>@comment.LikeCount</td>
                <td>
                    @if (!comment.IsApproved)
                    {
                        <form asp-action="ApproveComment" method="post">
                            <input type="hidden" name="commentId" value="@comment.Id" />
                            <input type="submit" value="Approve" class="btn btn-success" />
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
