@model List<E_Shop.Domain.ViewModels.ContactUsMessageViewModel>

<div class="container">
    <h5 class="mb-4">لیست پیام کاربران</h5>
    <div class="table-responsive text-nowrap">
        <table class="table card-table">
            <thead>
                <tr>
                    <th>نام کامل</th>
                    <th>ایمیل</th>
                    <th>عنوان</th>
                    <th>وضعیت پیام</th>
                    <th>عملیات ها</th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong> <a> @item.FullName</a></strong></td>
                        <td>@item.Email</td>
                        <td>
                            <a> @item.Title</a>
                        </td>
                        <td>
                            @if (item.IsRead)
                            {
                                <span class="badge bg-label-primary me-1">خوانده شده</span>
                            }
                            else 
                            {
                                <span class="badge bg-label-danger me-1">خوانده نشده</span>
                            }


                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> پاسخ دادن</a>
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> پاک کردن</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
