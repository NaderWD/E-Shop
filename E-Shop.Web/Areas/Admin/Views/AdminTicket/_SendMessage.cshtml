@model MessageVM




<div class="chat-history-footer">
    <form asp-action="SaveMessage" asp-controller="AdminTicket" asp-area="Admin" method="post" enctype="multipart/form-data"
          class="form-send-message d-flex justify-content-between align-items-center">

        <input asp-for="TicketId" type="hidden" />
        <input asp-for="Text" class="form-control message-input border-0 me-3 shadow-none" placeholder="پیام خود را وارد کنید . . .">
        <span asp-validation-for="Text"></span>
        <div class="message-actions d-flex align-items-center">

            <label for="attach-doc" class="form-label mb-0">
                <i class="bx bx-paperclip bx-sm cursor-pointer mx-3"></i>
                <input asp-for="FilePath" accept=".jpg,.png,.pdf" type="file" id="attach-doc" hidden="">
            </label>
            <button type="submit" class="btn btn-primary d-flex" id="sendTicketMessage">
                <i class="bx bx-paper-plane me-md-1 me-0"></i>
                <span class="align-middle d-md-inline-block d-none">ارسال</span>
            </button>
        </div>
    </form>
</div>
