@model TicketVM




<div class="container-xxl flex-grow-1 container-p-y">
    <div class="app-chat overflow-hidden card">
        <div class="row g-0">
            <div class="col-md mb-4 mb-md-0">
                <div class="card">
                    <h5 class="card-header"> ویرایش تیکت کاربر : @ViewBag.Name</h5>
                    <div class="card-body">
                        <form asp-action="EditTicket" asp-controller="AdminTicket" asp-area="Admin" method="post" class="browser-default-validation">
                            <input asp-for="Id" type="hidden" />
                            <div class="col-md-6">
                                <div class="form-element-row mb-5">
                                    <label asp-for="Section" class="control-label">بخش</label>
                                    <select asp-for="Section" class="form-control"
                                            asp-items="Html.GetEnumSelectList<TicketsEnums.Section>()">
                                        <option value="">انتخاب کنید</option>
                                    </select>
                                    <span asp-validation-for="Section" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-element-row mb-5">
                                    <label asp-for="Status" class="control-label">وضعیت</label>
                                    <select asp-for="Status" class="form-control"
                                            asp-items="Html.GetEnumSelectList<TicketsEnums.Status>()">
                                        <option value="">انتخاب کنید</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">ثبت تغییرات</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>