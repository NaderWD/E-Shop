@model ChatVM




<div class="container-xxl flex-grow-1 container-p-y">
    <div class="app-chat overflow-hidden card">
        <div class="row g-0">
            <!-- Contacts List -->
            <div class="col app-chat-contacts app-sidebar flex-grow-0 overflow-hidden border-end">
                <div class="sidebar-body">
                    <ul class="list-unstyled chat-contact-list pt-1" id="chat-list">
                        @foreach (var user in Model.Users)
                        {
                            <li class="chat-contact-list-item @(user.Id == Model.SelectedUserId ? "active" : "")">
                                <a asp-action="Chat" asp-route-userId="@user.Id"
                                   class="d-flex align-items-center">
                                    <div class="flex-shrink-0 avatar avatar-online">
                                        <span class="avatar-initial rounded-circle bg-label-primary">
                                            @user.FirstName[0]@user.LastName[0]
                                        </span>
                                    </div>
                                    <div class="chat-contact-info flex-grow-1 ms-3">
                                        <h6 class="chat-contact-name text-truncate m-0">
                                            @user.FirstName @user.LastName
                                        </h6>
                                        <p class="chat-contact-status text-truncate mb-0 text-muted">
                                            @user.EmailAddress
                                        </p>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="chat-history-header border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex overflow-hidden align-items-center">
                        @if (Model.CurrentTicket != null)
                        {
                            <div class="chat-contact-info flex-grow-1 ms-3">
                                <h6 class="m-0">@Model.CurrentTicket.Title</h6>
                                <small class="user-status text-muted">
                                    آخرین فعالیت: @Model.CurrentTicket.LastModifiedDate?.ToString("g")
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Chat History -->
            <div class="col app-chat-history">
                @if (Model.SelectedUserId == null)
                {
                    <div class="text-center p-5">
                        <h5>کاربری را برای ارسال تیکت انتخاب کنید</h5>
                    </div>
                }
                else
                {
                    <div class="chat-history-wrapper">
                        <!-- Messages -->
                        <div class="chat-history-body">
                            <ul class="list-unstyled chat-history mb-0">
                                @foreach (var message in Model.Messages)
                                {
                                    <li class="chat-message @(message.IsAdminReply ? "chat-message-right" : "")">
                                        <div class="d-flex overflow-hidden">
                                            @if (!message.IsAdminReply)
                                            {
                                                <div class="user-avatar flex-shrink-0 me-3">
                                                    <div class="avatar avatar-sm">
                                                        <span class="avatar-initial rounded-circle bg-label-success">
                                                            @Model.Users.First(u => u.Id == Model.SelectedUserId).FirstName[0]
                                                        </span>
                                                    </div>
                                                </div>
                                            }
                                            <div class="chat-message-wrapper flex-grow-1">
                                                <div class="chat-message-text">
                                                    <p class="mb-0">@message.Text</p>
                                                </div>
                                                <div class="@(message.IsAdminReply ? "text-end" : "") text-muted mt-1">
                                                    <small>@message.CreateDate?.ToString("hh:mm tt")</small>
                                                </div>
                                            </div>
                                            @if (message.IsAdminReply)
                                            {
                                                <div class="user-avatar flex-shrink-0 ms-3">
                                                    <div class="avatar avatar-sm">
                                                        <span class="avatar-initial rounded-circle bg-label-primary">
                                                            @User.Identity.Name[0]
                                                        </span>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>

                        <!-- Message Form -->
                        <div class="chat-history-footer">
                            <form asp-action="SendMessage" method="post"
                                  enctype="multipart/form-data">
                                <input type="hidden" asp-for="NewMessage.TicketId" value="@Model.CurrentTicket?.Id" />
                                <input type="hidden" asp-for="NewMessage.IsAdminReply" value="true" />
                                <input type="hidden" asp-for="NewMessage.SenderId" value="@User.GetUserId()" />
                                <input type="hidden" name="TicketId"
                                       value="@Model.Tickets?.FirstOrDefault()?.Id" />
                                <input type="hidden" name="IsAdminReply" value="true" />

                                <div class="form-send-message d-flex justify-content-between align-items-center">
                                    <input asp-for="NewMessage.Text"
                                           class="form-control message-input border-0 me-3 shadow-none"
                                           placeholder="Type your message here..." />
                                    <div class="message-actions d-flex align-items-center">
                                        <input type="file" name="attachment"
                                               id="attach-doc" class="form-control-file d-none" />
                                        <label for="attach-doc" class="mb-0 me-3">
                                            <i class="bx bx-paperclip bx-sm cursor-pointer"></i>
                                        </label>
                                        <button type="submit"
                                                class="btn btn-primary d-flex send-msg-btn">
                                            <i class="bx bx-paper-plane me-md-1 me-0"></i>
                                            <span class="align-middle d-md-inline-block d-none">Send</span>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>