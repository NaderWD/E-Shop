@model ProductRatingSummaryVM
@{
    var productId = ViewData["ProductId"] as int? ?? 0;
}


<div class="comments-sidebar">
    <div class="comments-sidebar-rating">
        <div class="comments-sidebar-rating-main me-2">@Model.OverallRating.ToString("0.0")</div>
        <div class="comments-sidebar-rating-desc">از ۵</div>
    </div>
    <div class="comments-sidebar-rating-bottom">
        <div class="stars-container justify-content-end">
            <div class="stars-text ms-2">از مجموع @Model.RatingCount امتیاز</div>
            <div class="stars">
                <div class="stars-val" style="width: @(Model.OverallRating / 5 * 100)%;"></div>
            </div>
        </div>
    </div>
    <div class="content-expert-rating mt-4">
        <div class="mb-3">
            <div class="content-expert-rating-title">کیفیت ساخت</div>
            <div class="content-expert-rating-value-wrapper">
                <div class="content-expert-rating-value" style="width: @(Model.BuildQuality / 5 * 100)%;"></div>
                <div class="content-expert-rating-value-label">@Model.BuildQuality.ToString("0.0")</div>
            </div>
        </div>
        <div class="mb-3">
            <div class="content-expert-rating-title">ارزش خرید</div>
            <div class="content-expert-rating-value-wrapper">
                <div class="content-expert-rating-value" style="width: @(Model.ValueForMoney / 5 * 100)%;"></div>
                <div class="content-expert-rating-value-label">@Model.ValueForMoney.ToString("0.0")</div>
            </div>
        </div>
        <div class="mb-3">
            <div class="content-expert-rating-title">نوآوری</div>
            <div class="content-expert-rating-value-wrapper">
                <div class="content-expert-rating-value" style="width: @(Model.Innovation / 5 * 100)%;"></div>
                <div class="content-expert-rating-value-label">@Model.Innovation.ToString("0.0")</div>
            </div>
        </div>
        <div class="mb-3">
            <div class="content-expert-rating-title">ویژگی‌ها</div>
            <div class="content-expert-rating-value-wrapper">
                <div class="content-expert-rating-value" style="width: @(Model.Features / 5 * 100)%;"></div>
                <div class="content-expert-rating-value-label">@Model.Features.ToString("0.0")</div>
            </div>
        </div>
        <div class="mb-3">
            <div class="content-expert-rating-title">سهولت استفاده</div>
            <div class="content-expert-rating-value-wrapper">
                <div class="content-expert-rating-value" style="width: @(Model.EaseOfUse / 5 * 100)%;"></div>
                <div class="content-expert-rating-value-label">@Model.EaseOfUse.ToString("0.0")</div>
            </div>
        </div>
        <div class="mb-3">
            <div class="content-expert-rating-title">طراحی</div>
            <div class="content-expert-rating-value-wrapper">
                <div class="content-expert-rating-value" style="width: @(Model.Design / 5 * 100)%;"></div>
                <div class="content-expert-rating-value-label">@Model.Design.ToString("0.0")</div>
            </div>
        </div>
    </div>
    <a asp-controller="UserComment" asp-action="CreateComment" asp-area="User" asp-route-productId="@productId"
       class="btn btn-block btn-outline-dark mb-2">افزودن دیدگاه</a>
    <a asp-controller="UserRating" asp-action="CreateRating" asp-area="User" asp-route-productId="@productId"
       class="btn btn-block btn-outline-secondary">افزودن امتیاز</a>
</div>

