@model ResetPasswordVM


<main class="page-content page-auth">
    <!-- start of auth-container -->
    <div class="auth-container">
        <div class="auth-title mb-3">تغییر رمز عبور</div>
        <!-- start of auth-box -->
        <div class="auth-box ui-box">
            <!-- start of auth-form -->
            <form asp-action="Register" method="post" class="auth-form">
                <input type="hidden" asp-for="EmailAddress" />
                <!-- start of form-element -->
                <div class="form-element-row mb-5">
                    <input type="password" class="form-control" placeholder="رمز عبور جدید" asp-for="Password">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-element-row mb-5">
                    <input type="password" class="form-control" placeholder="تکرار رمز عبور جدید" asp-for="RePassword">
                    @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-element-row mb-5">
                    <input type="text" class="form-control" placeholder="کد ارسال شده" asp-for="ActivationCode">
                    @Html.ValidationMessageFor(model => model.ActivationCode, "", new { @class = "text-danger" })
                </div>
                <button class="btn btn-primary d-grid w-100 mb-3">تایید کلمه ی عبور جدید</button>
                <div class="verify-code-wrapper mt-3 mb-5">
                    <div id="timerContainer">
                        <span id="timer"></span>
                        <a class="hidden"
                           id="resendLink"
                           asp-action="ReSendForReset"
                           asp-route-email="@Model.EmailAddress"
                           }>
                            ارسال کد جدید
                        </a>
                    </div>
                </div>
                <!-- end of form-element -->
                <p class="text-center">
                    <a asp-action="Login">
                        <span> بازگشت به صفحه ی ورود </span>
                    </a>
                </p>
         
                <!-- end of form-element -->
            </form>
            <!-- end of auth-form -->
        </div>
        <!-- end of auth-box -->
    </div>
    <!-- start of auth-container -->
</main>
