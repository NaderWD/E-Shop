@model ConfirmEmailVM


<main class="page-content page-auth">
    <!-- start of auth-container -->
    <div class="auth-container">
        <div class="auth-title mb-3">تایید حساب کاربری</div>
        <!-- start of auth-box -->
        <div class="auth-box ui-box">
            <!-- start of auth-form -->
            <form action="#" class="auth-form">
                <input type="hidden" asp-for="EmailAddress" />
                <!-- start of form-element -->
                <div class="form-element-row mb-3">
                    <p>حساب کاربری شما ایجاد شد.
                        برای تایید آن کد ارسال شده به ایمیل را وارد کنید
                    </p>
                </div>
                <!-- end of form-element -->
                <div class="form-element-row mb-5">
                    <input type="number" class="form-control" placeholder="کد ارسال شده" asp-for="ActivationCode">
                    @Html.ValidationMessageFor(model => model.ActivationCode, "", new { @class = "text-danger" })
                </div>
                <!-- start of form-element -->
                <div class="form-element-row mb-3">
                    <div class="form-input-code-container fa-num">
                        <input type="text" maxlength="2" class="form-control input-code" id="input-code-0"
                               data-next="1" autocomplete="off" autofocus>
                        <span class="divider">-</span>
                        <input type="text" maxlength="2" class="form-control input-code" id="input-code-1"
                               data-next="2" autocomplete="off">
                        <span class="divider">-</span>
                        <input type="text" maxlength="2" class="form-control input-code" id="input-code-2"
                               autocomplete="off">
                                <span class="divider">-</span>
                        <input type="text" maxlength="2" class="form-control input-code" id="input-code-3"
                               autocomplete="off">
                        <span class="divider">-</span>
                        <input type="text" maxlength="2" class="form-control input-code" id="input-code-4"
                               autocomplete="off">
                        <span class="divider">-</span>
                        <input type="text" maxlength="2" class="form-control input-code" id="input-code-5"
                               autocomplete="off">
                    </div>
                </div>
                <!-- end of form-element -->
                <!-- start of verify-code-wrapper -->
                <div class="verify-code-wrapper mt-3 mb-5">
                    <div class="d-flex align-items-center" dir="ltr">
                        <span class="text-sm">مدت زمان باقیمانده</span>
                        <span class="mx-2">|</span>
                        <div id="timer--verify-code" data-minutes-left=2></div>
                    </div>
                    <a class="btn btn-primary d-grid w-100 mb-3" asp-action="ReSend" asp-route-email="@Model.EmailAddress">ارسال کد جدید</a>
                </div>
                <!-- end of verify-code-wrapper -->
                <!-- start of form-element -->
                <div class="form-element-row mb-3">
                    <button type="submit" class="btn btn-primary">تایید حساب کاربری</button>
                </div>
                <!-- end of form-element -->
                <!-- start of form-element -->
                <div class="form-element-row">
                    <a href="ForgetPassword" class="link mx-auto">ویرایش ایمیل<i class="ri-pencil-fill ms-1"></i></a>
                </div>
                <!-- end of form-element -->
            </form>
            <!-- end of auth-form -->
        </div>
        <!-- end of auth-box -->
    </div>
    <!-- end of auth-container -->
</main>


