@model LoginVM



<h4 class="mb-2">به فروشگاه ما خوش آمدید  👋</h4>
<p class="mb-4">برای تجربه ی بهتر لطفا وارد پنل خود شوید</p>

<form id="login" class="mb-3" method="POST" asp-action="Login">
    <div class="mb-3">
        <label for="email" class="form-label">ایمیل</label>
        <input type="text"
               class="form-control"
               placeholder="Enter your email or username"
               autofocus
               asp-for="EmailAddress" />
    </div>
    <div class="mb-3 form-password-toggle">
        <div class="d-flex justify-content-between">
            <label class="form-label" for="password">رمز عبور</label>

        </div>
        <div class="input-group input-group-merge">
            <input type="password"
                   class="form-control"
                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                   aria-describedby="password"
                   asp-for="Password" />
            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
        </div>
        <a href="ForgetPassword">
            <small>فراموشی رمز عبور</small>
        </a>
    </div>
    <div class="mb-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="remember-me" />
            <label class="form-check-label" for="remember-me"> مرا به خاطر بسپار </label>
        </div>
    </div>
    <button class="btn btn-primary d-grid w-100">ورود</button>
</form>

<p class="text-center">
    <span>تا به حال ثبت نام نکرده اید ؟  </span>
    <a asp-action="Register">
        <span>ثبت نام</span>
    </a>
</p>

<div class="divider my-4">
    <div class="divider-text">or</div>
</div>

<div class="d-flex justify-content-center">
    <a href="javascript:;" class="btn btn-icon btn-label-facebook me-3">
        <i class="tf-icons bx bxl-facebook"></i>
    </a>

    <a href="javascript:;" class="btn btn-icon btn-label-google-plus me-3">
        <i class="tf-icons bx bxl-google-plus"></i>
    </a>

    <a href="javascript:;" class="btn btn-icon btn-label-twitter">
        <i class="tf-icons bx bxl-twitter"></i>
    </a>
</div>